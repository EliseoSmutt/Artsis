<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Artsis.Gestion.Views.Gestion"
             xmlns:local="clr-namespace:Artsis.Helpers"
             xmlns:vmGestion="clr-namespace:Artsis.Gestion.ViewModels"
             x:Name="GestionPage"
             Title="">



    <ContentPage.Resources>
        <ResourceDictionary>
            <local:BoolToSiNoConverter x:Key="BoolToSiNoConverter" />
            <local:BoolInvertConverter x:Key="BoolInvertConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid x:DataType ="vmGestion:GestionViewModel" BackgroundColor="#040006">




        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Barra desplegable -->
        <StackLayout Grid.Column="0" BackgroundColor="#b11c3c" Padding="10">
            <Label Text="Gestion" FontSize="24" TextColor="#dfd9bb" VerticalOptions="Start" Margin="0,0,0,20" />
            <Button Text="Usuarios" BackgroundColor="#dfd9bb" TextColor="Black" Margin="0,10"/>
         
            <Image Source="logocine.png" HorizontalOptions="Center" VerticalOptions="EndAndExpand" Margin="0,10"/>
            <Button Text="CERRAR SESION" Command="{Binding CerrarSesionCommand}" BackgroundColor="#dfd9bb" VerticalOptions="EndAndExpand"  TextColor="Black" Margin="0,10"/>
        </StackLayout>

        <!-- Contenedor Main -->
        <ScrollView Grid.Column="1" Padding="10">
            <VerticalStackLayout Spacing="10">
                <Grid RowSpacing="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    </Grid>

                <!-- Botones -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button Text="Registrar Usuario" Command="{Binding RegistrarUsuarioCommand}" HorizontalOptions="Start" Grid.Column="0"  BackgroundColor="#b11c3c" TextColor="white" />
                    <Button Text="Buscar" Command="{Binding BuscarCommand}" HorizontalOptions="End" Grid.Column="1" BackgroundColor="#b11c3c" TextColor="White" />

                </Grid>

            

                <CollectionView ItemsSource="{Binding Items}"
                                RemainingItemsThreshold="5"
                                RemainingItemsThresholdReachedCommand="{Binding CargarMasCommand}">
                    <CollectionView.Header>
                        <Grid BackgroundColor="Gray" Padding="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Label Text="#" Grid.Column="0" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                            <Label Text="Nombre" Grid.Column="1" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                            <Label Text="Apellido" Grid.Column="2" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                            <Label Text="DNI" Grid.Column="3" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                            <Label Text="Area" Grid.Column="4" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />

                            <Grid Grid.Column="5"  Margin="0,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Label Text="Clave" Grid.Column="0" TextColor="White" HorizontalTextAlignment="Center" HorizontalOptions="End" VerticalTextAlignment="Center"  Margin="0,0,5,0"/>
                                <Button Command="{Binding MostrarPasswordsCommand}" 
                                         ImageSource="{Binding IconoMostrarPass}" 
                                         Grid.Column="1" 
                                         HorizontalOptions="Start" VerticalOptions="Center"
                                         WidthRequest="36" HeightRequest="36"
                                         BackgroundColor="Gray"
                                         Margin="5,0,0,0"
                                         CornerRadius="5" 
                                         BorderColor="Black" 
                                         BorderWidth="1">
                                        <Button.Shadow>
                                            <Shadow Brush="Black" Opacity="0.5" Offset="2,2" Radius="4"/>
                                        </Button.Shadow>
                                </Button>
                            </Grid>               
                                 <Label Text="Acciones" Grid.Column="6" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Margin="40,0,40,0" />
                        </Grid>
                    </CollectionView.Header>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="10" ColumnSpacing="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Label Text="{Binding NroFila}" Grid.Column="0" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White"/>
                                <Label Text="{Binding Nombre}" Grid.Column="1" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White"/>
                                <Label Text="{Binding Apellido}" Grid.Column="2" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White"/>
                                <Label Text="{Binding Dni}" Grid.Column="3" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White"/>
                                <Label Text="{Binding AreaDescripcion}" Grid.Column="4" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White"/>
                                <Entry Text="{Binding Pass}"
                                       IsReadOnly="True"
                                       IsPassword="{Binding Source={x:Reference GestionPage}, Path=BindingContext.PassVisible, Converter={StaticResource BoolInvertConverter}}" 
                                       Grid.Column="5" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White"/>

                                <StackLayout Orientation="Horizontal" Grid.Column="6" HorizontalOptions="Center" Spacing="5" Margin="20,0,0,0">
                                    <Button ImageSource="editar.png"  WidthRequest="48" HeightRequest="48" BackgroundColor="#b11c3c" TextColor="White" Command="{Binding Source={x:Reference Name=GestionPage}, Path=BindingContext.ModificarEmpleadoCommand}" CommandParameter="{Binding .}" />
                                    <Button ImageSource="basura.png"  WidthRequest="48" HeightRequest="48" BackgroundColor="#b11c3c" TextColor="White" Command="{Binding Source={x:Reference Name=GestionPage}, Path=BindingContext.EliminarEmpleadoCommand}" CommandParameter="{Binding Dni}" />
                                </StackLayout>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>