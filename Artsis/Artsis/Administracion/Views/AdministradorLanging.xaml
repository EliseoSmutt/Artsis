<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Artsis.Administracion.Views.AdministradorLanding"
             xmlns:local="clr-namespace:Artsis.Helpers"
             xmlns:vmAdministradorLanding="clr-namespace:Artsis.Administracion.ViewModels"
             x:Name="AdministradorLandingPage"
             Title="">



    <ContentPage.Resources>
        <ResourceDictionary>
            <local:BoolToSiNoConverter x:Key="BoolToSiNoConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid x:DataType ="vmAdministradorLanding:AdministradorLandingViewModel" BackgroundColor="#040006">




        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Barra desplegable -->
        <StackLayout Grid.Column="0" BackgroundColor="#b11c3c" Padding="10">
            <Label Text="Administración" FontSize="24" TextColor="#DFD9BB" VerticalOptions="Start" Margin="0,0,0,20" />
            <Button Text="SOCIOS-ABONADOS" Command="{Binding SociosAbonadosCommand}" BackgroundColor="#DFD9BB" TextColor="Black" Margin="0,10"/>
            <!--<Button Text="ALUMNOS ESCUELA" BackgroundColor="#D8A86D" TextColor="Black" Margin="0,10"/>-->
            <Button Text="MÉTRICAS" Command="{Binding GoToMetricasCommand}"  BackgroundColor="#DFD9BB" TextColor="Black" Margin="0,10"/>
            <Image Source="logocine.png" HorizontalOptions="Center" VerticalOptions="EndAndExpand" Margin="0,10"/>
            <Button Text="CERRAR SESION" Command="{Binding CerrarSesionCommand}" BackgroundColor="#DFD9BB" VerticalOptions="EndAndExpand"  TextColor="Black" Margin="0,10"/>
        </StackLayout>

        <!-- Contenedor Main -->
        <ScrollView Grid.Column="1" Padding="10">
            <VerticalStackLayout Spacing="10">
                <Grid RowSpacing="10">

                    <Image Source="logocine.png" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Margin="0,10" WidthRequest="700"/>


                </Grid>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>