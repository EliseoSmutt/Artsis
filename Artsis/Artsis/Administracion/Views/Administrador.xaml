<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Artsis.Administracion.Views.Administrador"
             xmlns:local="clr-namespace:Artsis.Helpers"
             xmlns:vmAdministrador="clr-namespace:Artsis.Administracion.ViewModels"
             x:Name="AdministradorPage"
             Title="">



    <ContentPage.Resources>
        <ResourceDictionary>
            <local:BoolToSiNoConverter x:Key="BoolToSiNoConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid x:DataType ="vmAdministrador:AdministradorViewModel" BackgroundColor="#040006">




        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Barra desplegable -->
        <StackLayout Grid.Column="0" BackgroundColor="#B11C3C" Padding="10">
            <Label Text="Administración" FontSize="24" TextColor="#DFD9BB" VerticalOptions="Start" Margin="0,0,0,20" />
            <Button Text="SOCIOS-ABONADOS" BackgroundColor="#DFD9BB" TextColor="Black" Margin="0,10"/>
            <Button Text="MÉTRICAS" Command="{Binding GoToMetricasCommand}"  BackgroundColor="#DFD9BB" TextColor="Black" Margin="0,10"/>
            <!--<Button Text="ALUMNOS ESCUELA" BackgroundColor="#D8A86D" TextColor="Black" Margin="0,10"/>-->
            <!--<Button Text="ÁREAS" BackgroundColor="#D8A86D" TextColor="Black" Margin="0,10"/>-->
            <Image Source="logocine.png" HorizontalOptions="Center" VerticalOptions="EndAndExpand" Margin="0,10"/>
            <Button Text="CERRAR SESION" Command="{Binding CerrarSesionCommand}" BackgroundColor="#DFD9BB" VerticalOptions="EndAndExpand"  TextColor="Black" Margin="0,10"/>
        </StackLayout>

        <!-- Contenedor Main -->
        <ScrollView Grid.Column="1" Padding="10">
            <VerticalStackLayout Spacing="10">
                <Grid RowSpacing="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--Filtro Inputs -->
                    <Entry Grid.Column="0" Grid.Row="0" Text="{Binding FiltroAbonadosDTO.Dni}" Placeholder="DNI" BackgroundColor="White" TextColor="Black" Margin="15,30,15,15"/>
                    <Entry Grid.Column="1" Grid.Row="0" Text="{Binding FiltroAbonadosDTO.Apellido}" Placeholder="Apellido" BackgroundColor="White" TextColor="Black" Margin="15,30,15,15"/>
                    <Entry Grid.Column="2" Grid.Row="0" Text="{Binding FiltroAbonadosDTO.NroAbonado}" Placeholder="Nro Socio/Abonado" BackgroundColor="White" TextColor="Black" Margin="15,30,15,15"/>
                    <Picker Grid.Column="3" Grid.Row="0" Title="Pase Anual" TitleColor="White"  BackgroundColor="White" Margin="15,0,15,15"  SelectedItem="{Binding PaseSeleccionado}" >
                        <Picker.Items >

                            <x:String>Ambos</x:String>
                                <x:String>Si</x:String>
                                <x:String>No</x:String>
                            
                        </Picker.Items>
                    </Picker>
                </Grid>

                <!-- Botones -->
                <Grid ColumnDefinitions="*, Auto" HorizontalOptions="FillAndExpand">
                    <Button Text="Registrar Abonado"  HorizontalOptions="Start" VerticalOptions="Center" Grid.Column="0" Command="{Binding RegistrarAbonadoCommand}" BackgroundColor="#B11C3C" TextColor="WHITE" />
                    <Button Text="Buscar" Grid.Column="1"  HorizontalOptions="End" VerticalOptions="Center"  Command="{Binding BuscarCommand}"  BackgroundColor="#B11C3C" TextColor="White" Margin="0,0,15,0" />
                </Grid>
                <CollectionView ItemsSource="{Binding Items}"
                                RemainingItemsThreshold="5"
                                RemainingItemsThresholdReachedCommand="{Binding CargarMasCommand}"
                                RemainingItemsThresholdReachedCommandParameter="{Binding FiltroAbonadosDTO}">
                    <CollectionView.Header>
                        <Grid BackgroundColor="Gray" Padding="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="0.5*" />
                                <ColumnDefinition Width="0.5*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="0.3*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Label Text="#" Grid.Column="0" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                            <Label Text="N Socio" Grid.Column="1" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Margin="10,0" />
                            <Label Text="Nombre" Grid.Column="2" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                            <Label Text="Apellido" Grid.Column="3" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                            <Label Text="DNI" Grid.Column="4" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                            <Label Text="Fecha Registro" Grid.Column="5" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                            <Label Text="Último Pago" Grid.Column="6" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                            <Label Text="Pase Anual" Grid.Column="7" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                            <Label Text="Acciones" Grid.Column="8" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Margin="40,0,40,0" />
                        </Grid>
                    </CollectionView.Header>
                    
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="10" ColumnSpacing="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="0.5*" />
                                    <ColumnDefinition Width="0.5*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="0.3*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Label Text="{Binding NroFila}" Grid.Column="0" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White"/>
                                <Label Text="{Binding NroAbonado}" Grid.Column="1" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Margin="10,0" TextColor="White"/>
                                <Label Text="{Binding Nombre}" Grid.Column="2" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White"/>
                                <Label Text="{Binding Apellido}" Grid.Column="3" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White"/>
                                <Label Text="{Binding Dni}" Grid.Column="4" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White"/>
                                <Label Text="{Binding FechaDeRegistro}" Grid.Column="5" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White"/>
                                <Label Text="{Binding UltimoMesPagado}" Grid.Column="6" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White"/>
                                <Label Text="{Binding PaseAnual, Converter={StaticResource BoolToSiNoConverter}}" Grid.Column="7" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White"/>

                                <StackLayout Orientation="Horizontal" Grid.Column="8" HorizontalOptions="Center" Spacing="5" Margin="20,0,0,0">

                                    <Button ImageSource="peso.png"  WidthRequest="48" HeightRequest="48" BackgroundColor="#B11C3C" TextColor="White" Command="{Binding Source={x:Reference Name=AdministradorPage}, Path=BindingContext.ActualizarUltimoPagoCommand}" CommandParameter="{Binding NroAbonado}" />

                                    <Button ImageSource="editar.png"  WidthRequest="48" HeightRequest="48" BackgroundColor="#B11C3C" TextColor="White" Command="{Binding Source={x:Reference Name=AdministradorPage}, Path=BindingContext.ModificarAbonadoCommand}" CommandParameter="{Binding .}" />
                                    <Button ImageSource="basura.png"  WidthRequest="48" HeightRequest="48" BackgroundColor="#B11C3C" TextColor="White" Command="{Binding Source={x:Reference Name=AdministradorPage}, Path=BindingContext.BorrarAbonadoCommand}" CommandParameter="{Binding Dni}" />

                                    <!--<Button Text="D" BackgroundColor="#a64c2a" TextColor="White" Command="{Binding RegistrarAbonadoCommand}" />-->
                                </StackLayout>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>