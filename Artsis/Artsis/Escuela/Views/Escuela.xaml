<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Artsis.Escuela.Views.Escuela"
             xmlns:local="clr-namespace:Artsis.Helpers"
             xmlns:vmEscuela="clr-namespace:Artsis.Escuela.ViewModels"
             x:Name="EscuelaPage"
             Title="">



    <ContentPage.Resources>
        <ResourceDictionary>
            <local:BoolToSiNoConverter x:Key="BoolToSiNoConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid x:DataType ="vmEscuela:EscuelaViewModel" BackgroundColor="#040006">




        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Barra desplegable -->
        <StackLayout Grid.Column="0" BackgroundColor="#b11c3c" Padding="10">
            <Label Text="Escuela" FontSize="24" TextColor="#dfd9bb" VerticalOptions="Start" Margin="0,0,0,20" />
            <Button Text="CURSOS Y TALLERES"  BackgroundColor="#dfd9bb" TextColor="Black" Margin="0,10"/>
            <Button Text="PROFESORES" Command="{Binding ProfesoresCommand}" BackgroundColor="#dfd9bb" TextColor="Black" Margin="0,10"/>
            <Image Source="logocine.png" HorizontalOptions="Center" VerticalOptions="EndAndExpand" Margin="0,10"/>
            <Button Text="CERRAR SESION" Command="{Binding CerrarSesionCommand}" BackgroundColor="#dfd9bb" VerticalOptions="EndAndExpand"  TextColor="Black" Margin="0,10"/>
        </StackLayout>

        <!-- Contenedor Main -->
        <ScrollView Grid.Column="1" Padding="10">
            <VerticalStackLayout Spacing="10">


                <!-- Botones -->

                <Grid ColumnDefinitions="*, Auto" HorizontalOptions="FillAndExpand">
                    <!-- Columna 1: BotÃ³n Nuevo Taller -->
                    <Button Grid.Column="0"
                            Text="Nuevo Taller"
                            BackgroundColor="#b11c3c"
                            TextColor="White"
                            HorizontalOptions="Start"
                            VerticalOptions="Center"
                            Command="{Binding RegistrarTallerCommand}"/>

                    <!-- Columna 2: Controles de la derecha -->
                    <HorizontalStackLayout Grid.Column="1" Spacing="20" HorizontalOptions="End" VerticalOptions="Center" Margin="0,0,20,0">
                        <VerticalStackLayout VerticalOptions="Center">
                                <Border
                                    Stroke="White"
                                    StrokeThickness="2"
                                    StrokeShape="RoundRectangle 8"
                                    WidthRequest="200"
                                    Padding="0">                               
                                    
                                    <Entry
                                        Placeholder="Nombre del Taller"
                                        TextColor="White"
                                        FontSize="14"
                                        BackgroundColor="Transparent"
                                        VerticalOptions="Center"
                                        Text="{Binding Filtro}" />
                                </Border>
                        </VerticalStackLayout>



                        <Button Text="Filtrar Taller"
                                Command="{Binding BuscarCommand}"
                                BackgroundColor="#b11c3c"
                                TextColor="White"
                                VerticalOptions="Center"
                                Margin="10,0,0,0"/>
                    </HorizontalStackLayout>
                </Grid>


                <CollectionView
                    ItemsSource="{Binding Items}"
                    RemainingItemsThreshold="5"
                    RemainingItemsThresholdReachedCommand="{Binding CargarMasCommand}"
                    RemainingItemsThresholdReachedCommandParameter="{Binding FiltroTallerDTO}">

                    <CollectionView.Header>
                        <Grid BackgroundColor="Gray" Padding="10" ColumnSpacing="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="0.7*" />
                                <ColumnDefinition Width="0.7*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1.5*" />

                            </Grid.ColumnDefinitions>

                            <Label Text="#" Grid.Column="0" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                            <Label Text="Nombre Taller" Grid.Column="1" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                            <Label Text="Profesor" Grid.Column="2" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                            <Label Text="Fecha Inicio" Grid.Column="3" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                            <Label Text="Fecha Fin" Grid.Column="4" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                            <Label Text="Espacio" Grid.Column="5" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                            <Label Text="Cupo" Grid.Column="6" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                            <Label Text="Acciones" Grid.Column="7" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                        </Grid>
                    </CollectionView.Header>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="10" ColumnSpacing="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.2*" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="0.7*" />
                                    <ColumnDefinition Width="0.7*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1.5*" />
                                </Grid.ColumnDefinitions>

                                <Label Text="{Binding NroFila}" Grid.Column="0" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White"/>
                                <Label Text="{Binding NombreTaller}" Grid.Column="1" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Margin="10,0" TextColor="White"/>
                                <Label Text="{Binding NombreTallerista}" Grid.Column="2" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White"/>
                                <Label Text="{Binding FechaInicio}" Grid.Column="3" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White"/>
                                <Label Text="{Binding FechaFinal}" Grid.Column="4" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White"/>
                                <Label Text="{Binding EspacioDescripcion}" Grid.Column="5" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White"/>
                                <Label Text="{Binding Cupo}" Grid.Column="6" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White"/>

                                <StackLayout Orientation="Horizontal" Grid.Column="7" HorizontalOptions="Center" Spacing="5" >
                                    <Button ImageSource="lupa.png" WidthRequest="48" HeightRequest="48"  HorizontalOptions="StartAndExpand" BackgroundColor="#b11c3c" Margin="3" TextColor="White" Command="{Binding Source={x:Reference Name=EscuelaPage}, Path=BindingContext.DetalleTallerCommand}" CommandParameter="{Binding .}"/>
                                    <Button ImageSource="editar.png" WidthRequest="48" HeightRequest="48"  HorizontalOptions="CenterAndExpand" BackgroundColor="#b11c3c" Margin="3" TextColor="White" Command="{Binding Source={x:Reference Name=EscuelaPage}, Path=BindingContext.ModificarTallerCommand}" CommandParameter="{Binding .}"/>
                                    <Button ImageSource="basura.png"  WidthRequest="48" HeightRequest="48" HorizontalOptions="EndAndExpand" BackgroundColor="#b11c3c" Margin="3" TextColor="White" Command="{Binding Source={x:Reference Name=EscuelaPage}, Path=BindingContext.BorrarTallerCommand}" CommandParameter="{Binding Id}"/>
                                </StackLayout>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>