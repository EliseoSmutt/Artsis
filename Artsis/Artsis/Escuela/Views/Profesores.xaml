<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Artsis.Escuela.Views.Profesores"
             xmlns:local="clr-namespace:Artsis.Helpers"
             xmlns:vmProfesores="clr-namespace:Artsis.Escuela.ViewModels"
             x:Name="ProfesoresPage"
             Title="">



    <ContentPage.Resources>
        <ResourceDictionary>
            <local:BoolToSiNoConverter x:Key="BoolToSiNoConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid x:DataType ="vmProfesores:ProfesoresViewModel" BackgroundColor="#040006">




        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Barra desplegable -->
        <StackLayout Grid.Column="0" BackgroundColor="#b11c3c" Padding="10">
            <Label Text="Escuela" FontSize="24" TextColor="#dfd9bb" VerticalOptions="Start" Margin="0,0,0,20" />
            <Button Text="CURSOS Y TALLERES" Command="{Binding EscuelaCommand}" BackgroundColor="#dfd9bb" TextColor="Black" Margin="0,10"/>
            <Button Text="PROFESORES" BackgroundColor="#dfd9bb" TextColor="Black" Margin="0,10"/>
            <Image Source="logocine.png" HorizontalOptions="Center" VerticalOptions="EndAndExpand" Margin="0,10"/>
            <Button Text="CERRAR SESION" Command="{Binding CerrarSesionCommand}" BackgroundColor="#dfd9bb" VerticalOptions="EndAndExpand"  TextColor="Black" Margin="0,10"/>
        </StackLayout>

        <!-- Contenedor Main -->
        <ScrollView Grid.Column="1" Padding="10">
            <VerticalStackLayout Spacing="10">


                <!-- Botones -->

                <Grid ColumnDefinitions="*, Auto" HorizontalOptions="FillAndExpand">
                    <!-- Columna 1: BotÃ³n Nuevo Profesor -->
                    <Button Grid.Column="0"
                            Text="Nuevo Profesor"
                            BackgroundColor="#b11c3c"
                            TextColor="white"
                            HorizontalOptions="Start"
                            VerticalOptions="Center"
                            Command="{Binding RegistrarTalleristaCommand}"/>
                    <Button Grid.Column="1"
                            Text="Buscar Profesores"
                            Command="{Binding BuscarCommand}"
                            BackgroundColor="#b11c3c"
                            TextColor="white"
                            HorizontalOptions="Start"
                            VerticalOptions="Center" />


                </Grid>

                <!-- Tabla con grids y labels por ahora -->

                <CollectionView
                    ItemsSource="{Binding Items}"
                    RemainingItemsThreshold="5"
                    RemainingItemsThresholdReachedCommand="{Binding CargarMasCommand}" >
                    <CollectionView.Header>
                        <Grid BackgroundColor="Gray" Padding="10" ColumnSpacing="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="1.5*" />
                                <ColumnDefinition Width="0.7*" />
                                <ColumnDefinition Width="0.7*" />
                                <ColumnDefinition Width="1.5*" />
                                <ColumnDefinition Width="1.5*" />
                                <ColumnDefinition Width="1*" />

                            </Grid.ColumnDefinitions>

                            <Label Text="#" Grid.Column="0" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                            <Label Text="Nombre " Grid.Column="1" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                            <Label Text="Dni" Grid.Column="2" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                            <Label Text="Telefono" Grid.Column="3" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                            <Label Text="Mail" Grid.Column="4" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                            <Label Text="Domicilio" Grid.Column="5" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                            <Label Text="Acciones" Grid.Column="6" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                        </Grid>
                    </CollectionView.Header>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="10" ColumnSpacing="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="20" />
                                    <ColumnDefinition Width="1.5*" />
                                    <ColumnDefinition Width="0.7*" />
                                    <ColumnDefinition Width="0.7*" />
                                    <ColumnDefinition Width="1.5*" />
                                    <ColumnDefinition Width="1.5*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>

                                <Label Text="{Binding NroFila}" Grid.Column="0" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White"/>
                                <Label Text="{Binding NombreTallerista}" Grid.Column="1" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Margin="10,0" TextColor="White"/>
                                <Label Text="{Binding Dni}" Grid.Column="2" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White"/>
                                <Label Text="{Binding Telefono}" Grid.Column="3" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White"/>
                                <Label Text="{Binding Email}" Grid.Column="4" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White"/>
                                <Label Text="{Binding Direccion}" Grid.Column="5" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White"/>

                                <StackLayout Orientation="Horizontal" Grid.Column="6" HorizontalOptions="Center" Spacing="5" >
                                    <Button ImageSource="editar.png"  WidthRequest="48" HeightRequest="48" BackgroundColor="#B11C3C" TextColor="White" Command="{Binding Source={x:Reference Name=ProfesoresPage}, Path=BindingContext.ModificarTalleristaCommand}" CommandParameter="{Binding .}" />
                                    <Button ImageSource="basura.png"  WidthRequest="48" HeightRequest="48" BackgroundColor="#b11c3c" TextColor="White" Command="{Binding Source={x:Reference Name=ProfesoresPage}, Path=BindingContext.BorrarProfesorCommand}" CommandParameter="{Binding Dni}"/>
                                </StackLayout>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>