<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Artsis.Boleteria.BoleteriaLanding"
             xmlns:local="clr-namespace:Artsis.Helpers"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:vmBoleteriaLanding="clr-namespace:Artsis.Boleteria"
             x:Name="BoleteriaLandingPage"
             Title=""
             >
    <ContentPage.Resources>
        <ResourceDictionary>
            <local:BoolToSiNoConverter x:Key="BoolToSiNoConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid x:DataType ="vmBoleteriaLanding:BoleteriaLandingViewModel" BackgroundColor="#040006" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Barra desplegable -->
        <StackLayout Grid.Column="0" BackgroundColor="#b11c3c" Padding="10">
            <Label Text="BOLETERIA" FontSize="24" FontAttributes="Bold" TextColor="#DFD9BB" VerticalOptions="Start" Margin="0,0,0,20" />
            <Button Text="FUNCIONES" BackgroundColor="#DFD9BB" Command="{Binding BoleteriaFuncionesCommand}" TextColor="black" Margin="0,10"/>
            <Button Text="PELICULAS" BackgroundColor="#DFD9BB" Command="{Binding BoleteriaPeliculasCommand}" TextColor="black" Margin="0,10"/>
            <Image Source="logocine.png" HorizontalOptions="Center" VerticalOptions="EndAndExpand" Margin="0,10"/>
            <Button Text="CERRAR SESION" Command="{Binding CerrarSesionCommand}" BackgroundColor="#DFD9BB" VerticalOptions="EndAndExpand"  TextColor="black" Margin="0,10"/>
        </StackLayout>

        <!-- Contenedor Main -->
        <ScrollView Grid.Column="1" Padding="10">
            <VerticalStackLayout Spacing="10">
                <Grid RowSpacing="10">

                    <Image Source="logocine.png" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Margin="0,10" WidthRequest="700"/>


                </Grid>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>