<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Artsis.Boleteria.Pelicula.Views.BoleteriaPeliculas"
             xmlns:local="clr-namespace:Artsis.Helpers"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:vmBoleteriaPeliculas="clr-namespace:Artsis.Boleteria.Pelicula.ViewModels"
             x:Name="BoleteriaPeliculasPage"
             Title=""
             >
    <ContentPage.Resources>
        <ResourceDictionary>
            <local:BoolToSiNoConverter x:Key="BoolToSiNoConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid x:DataType ="vmBoleteriaPeliculas:BoleteriaPeliculasViewModel" BackgroundColor="#040006" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Barra desplegable -->
        <StackLayout Grid.Column="0" BackgroundColor="#b11c3c" Padding="10">
            <Label Text="BOLETERIA" FontSize="24" FontAttributes="Bold" TextColor="#DFD9BB" VerticalOptions="Start" Margin="0,0,0,20" />
            <Button Text="FUNCIONES" BackgroundColor="#DFD9BB" Command="{Binding BoleteriaFuncionesCommand}" TextColor="black" Margin="0,10"/>
            <Button Text="PELICULAS" BackgroundColor="#DFD9BB" TextColor="black" Margin="0,10"/>
            <Image Source="logocine.png" HorizontalOptions="Center" VerticalOptions="EndAndExpand" Margin="0,10"/>
            <Button Text="CERRAR SESION" Command="{Binding CerrarSesionCommand}" BackgroundColor="#DFD9BB" VerticalOptions="EndAndExpand"  TextColor="Black" Margin="0,10"/>
        </StackLayout>

        <!-- Contenedor Main -->
        <ScrollView Grid.Column="1" Padding="10">
            <VerticalStackLayout Spacing="10">


                <!-- Botones -->


                    <Grid ColumnDefinitions="Auto,*,Auto" HorizontalOptions="FillAndExpand">
                        <!-- Botón al principio -->
                        <Button Grid.Column="0"
                                                    Command ="{Binding RegistrarPeliculaCommand}"  

            Text="Nueva Película" 
            BackgroundColor="#b11c3c" 
            TextColor="white" 
            Margin="15,10,15,10" />

                        <!-- Botón al final -->
                        <Button Grid.Column="2"
            Text="Filtrar Película" 
            Command="{Binding BuscarCommand}" 
            BackgroundColor="#b11c3c" 
            TextColor="white" 
            Margin="15,10,15,10" />
                    </Grid>



                <!-- Tabla con grids y labels por ahora -->

                <CollectionView
                    ItemsSource="{Binding Items}"
                    RemainingItemsThreshold="5"
                    RemainingItemsThresholdReachedCommand="{Binding CargarMasCommand}">
                    <CollectionView.Header>
                        <Grid BackgroundColor="Gray" Padding="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />



                            </Grid.ColumnDefinitions>

                            <Label Text="#" Grid.Column="0" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                            <Label Text="Nombre" Grid.Column="1" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Margin="10,0" />
                            <Label Text="Duracion" Grid.Column="2" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                            <Label Text="Genero" Grid.Column="3" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                            <Label Text="Director" Grid.Column="4" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                            <Label Text="Acciones" Grid.Column="5" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />

                        </Grid>
                    </CollectionView.Header>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="10" ColumnSpacing="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />



                                </Grid.ColumnDefinitions>

                                <Label Text="{Binding NroPelicula}" Grid.Column="0" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White"/>
                                <Label Text="{Binding Titulo}" Grid.Column="1" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Margin="10,0" TextColor="White"/>
                                <Label Text="{Binding Director}" Grid.Column="4" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White"/>
                                <Label Text="{Binding Duracion}" Grid.Column="2" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White"/>
                                <Label Text="{Binding Director}" Grid.Column="4" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White"/>
                                <Label Text="{Binding Genero}" Grid.Column="3" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White"/>

                                <StackLayout Orientation="Horizontal" Grid.Column="5" HorizontalOptions="Center" Spacing="5" Margin="20,0,0,0">
                                    <Button ImageSource="editar.png"  WidthRequest="48" HeightRequest="48" BackgroundColor="#b11c3c" TextColor="White" Command="{Binding Source={x:Reference Name=BoleteriaPeliculasPage}, Path=BindingContext.ModificarPeliculaCommand}" CommandParameter="{Binding .}"/>
                                    <Button ImageSource="basura.png"  WidthRequest="48" HeightRequest="48" BackgroundColor="#b11c3c" TextColor="White" Command="{Binding Source={x:Reference Name=BoleteriaPeliculasPage}, Path=BindingContext.BorrarPeliculaCommand}" CommandParameter="{Binding Id}"/>
                                </StackLayout>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>