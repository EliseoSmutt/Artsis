<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Artsis.Biblioteca.Views.Reservas"
             xmlns:local="clr-namespace:Artsis.Helpers"
             xmlns:vmReservas="clr-namespace:Artsis.Biblioteca.ViewModels"
             x:Name="ReservasPage"

             Title=""
             >


    <Grid x:DataType ="vmReservas:ReservasViewModel" BackgroundColor="#040006" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Barra desplegable -->
        <StackLayout Grid.Column="0" BackgroundColor="#b11c3c" Padding="10">
            <Label Text="BIBLIOTECA" FontSize="24" FontAttributes="Bold" TextColor="#dfd9bb" VerticalOptions="Start" Margin="0,0,0,20" />
            <Button Text="LIBROS" BackgroundColor="#dfd9bb" TextColor="black" Margin="0,10" Command="{Binding LibrosCommand}"/>
            <Button Text="RESERVAS" BackgroundColor="#dfd9bb" TextColor="black" Margin="0,10"/>
            <Image Source="logocine.png" HorizontalOptions="Center" VerticalOptions="EndAndExpand" Margin="0,10"/>
            <Button Text="CERRAR SESION" Command="{Binding CerrarSesionCommand}" BackgroundColor="#dfd9bb" VerticalOptions="EndAndExpand"  TextColor="black" Margin="0,10"/>
        </StackLayout>


        <ScrollView Grid.Column="1" Padding="10">
            <VerticalStackLayout Spacing="10">


                <!-- Botones -->

                <HorizontalStackLayout HorizontalOptions="End">
                        <Picker
                        Margin="15,0"
                        Title="Selecciona una estado"
                        TitleColor="Gray"
                        ItemsSource="{Binding EstadosReserva}"
                        ItemDisplayBinding="{Binding Descripcion}"
                        SelectedItem="{Binding EstadoSeleccionado}"
                        TextColor="White"
                        VerticalOptions="Center" />
                    <Entry  Placeholder="DNI" Text="{Binding DniAbonado}" BackgroundColor="White" TextColor="Black" Margin="5" WidthRequest="150"/>
                    <Button  Command="{Binding BuscarReservaCommand}" Text="Ver Reservas" BackgroundColor="#b11c3c"  TextColor="white" Margin="5,5,5,5" />

                </HorizontalStackLayout>

                <!-- Tabla con grids y labels por ahora -->

                <CollectionView Grid.Row="0" ItemsSource="{Binding Items}"
                RemainingItemsThreshold="5"
                RemainingItemsThresholdReachedCommand="{Binding CargarMasCommand}">
                    <CollectionView.Header>
                        <Grid BackgroundColor="Gray" Padding="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Label Text="#" Grid.Column="0" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Margin="10,0" />
                            <Label Text="Libro" Grid.Column="1" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Margin="10,0" />
                            <Label Text="Abonado" Grid.Column="2" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                            <Label Text="Fecha de Reserva" Grid.Column="3" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                            <Label Text="Fecha de DevoluciÃ³n" Grid.Column="4" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                            <Label Text="Estado" Grid.Column="5" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                            <Label Text="Acciones" Grid.Column="6" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                        </Grid>
                    </CollectionView.Header>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="10" ColumnSpacing="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="20" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Label Text="{Binding NroFila}" Grid.Column="0" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White"/>
                                <Button Text="Ver Libros" Grid.Column="1" WidthRequest="100" BackgroundColor="#b11c3c" TextColor="White" Command="{Binding Source={RelativeSource AncestorType={x:Type vmReservas:ReservasViewModel}}, Path=VerLibrosCommand}" CommandParameter="{Binding .}" />
                                <Label Text="{Binding NombrePersona}" Grid.Column="2" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Margin="10,0" TextColor="White"/>
                                <Label Text="{Binding FechaInicio}" Grid.Column="3" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White"/>
                                <Label Text="{Binding FechaDevolucion}" Grid.Column="4" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White"/>
                                <Label Text="{Binding EstadoDescripcion}" Grid.Column="5" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White"/>
                                <Button Text="Devolver" 
                        Grid.Column="6"
                        Command="{Binding Source={RelativeSource AncestorType={x:Type vmReservas:ReservasViewModel}}, Path=DevolverLibroCommand}" 
                        CommandParameter="{Binding .}" 
                        BackgroundColor="#b11c3c" 
                        TextColor="White"
                        WidthRequest="100"
                        IsEnabled="{Binding PuedeDevolver}" />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>